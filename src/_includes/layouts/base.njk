<!DOCTYPE html>
<html lang="{{ locale }}">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Primary Meta Tags -->
    <meta name="description" content="{{ description | t(locale) }}" />
    <title>{{ title | t(locale) }} | Pixoprint</title>
    <link rel="canonical" href="https://serpetl.github.io/Pixoprint{{ canonical or '/' }}" />

    <!-- Favicon -->
    <link rel="icon" href="{{ baseurl }}/assets/img/logo/favicon.ico" type="image/x-icon" />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="{{ baseurl }}/assets/img/logo/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="{{ baseurl }}/assets/img/logo/favicon-16x16.png"
    />
    <link rel="apple-touch-icon" href="{{ baseurl }}/assets/img/logo/apple-touch-icon.png" />
    <link rel="manifest" href="{{ baseurl }}/assets/img/logo/site.webmanifest" />

    <!-- Styles -->
    <link rel="stylesheet" href="{{ baseurl }}/assets/css/header.css" />
    <link rel="stylesheet" href="{{ baseurl }}/assets/css/style.css" />
    <link rel="stylesheet" href="{{ baseurl }}/assets/css/footer.css" />
    <!-- Page-specific stylesheet -->
    {% if css %}
    <link rel="stylesheet" href="{{ baseurl }}{{ css }}" />
    {% elseif page.fileSlug %}
    <link rel="stylesheet" href="{{ baseurl }}/assets/css/{{ page.fileSlug }}.css" />
    {% endif %}

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
    />
    <link rel="stylesheet" href="https://unpkg.com/aos@2.3.4/dist/aos.css" />

    <!-- Open Graph -->
    <meta property="og:title" content="{{ title | t(locale) }} | Pixoprint" />
    <meta property="og:description" content="{{ description | t(locale) }}" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://serpetl.github.io/Pixoprint{{ canonical or '/' }}" />
    <meta property="og:image" content="{{ baseurl }}/assets/img/og-image.jpg" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="{{ title | t(locale) }} | Pixoprint" />
    <meta name="twitter:description" content="{{ description | t(locale) }}" />
    <meta name="twitter:image" content="{{ baseurl }}/assets/img/og-image.jpg" />
  </head>

  <body class="page-{{ page.fileSlug }}">
    {% include "partials/header.njk" %}

    <main id="main" role="main" class="page-{{ page.fileSlug }}">{{ content | safe }}</main>

    {% include "partials/footer.njk" %}
    <div class="backdrop" id="backdrop"></div>

    <script src="{{ baseurl }}/assets/js/main.js"></script>
    <script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
    <script>
      AOS.init({
        duration: 800,
        once: true,
        offset: 100
      })
    </script>
  </body>
</html>
