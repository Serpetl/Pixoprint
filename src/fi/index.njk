---
layout: layouts/base.njk
permalink: '/fi/index.html'
locale: fi
title: meta.title
---

<!-- HERO + COUNTERS -->
<section class="hero-counters">
  <section class="hero">
    <div class="hero-bg">
      <picture>
        <source
          media="(max-width: 480px)"
          srcset="{{ baseurl }}/assets/img/main/hero-mobile.webp"
          type="image/webp"
        />
        <source
          media="(max-width: 768px)"
          srcset="{{ baseurl }}/assets/img/main/hero-tablet.webp"
          type="image/webp"
        />
        <source
          media="(min-width: 769px)"
          srcset="{{ baseurl }}/assets/img/main/hero-desktop.webp"
          type="image/webp"
        />
        <source media="(max-width: 480px)" srcset="{{ baseurl }}/assets/img/main/hero-mobile.jpg" />
        <source media="(max-width: 768px)" srcset="{{ baseurl }}/assets/img/main/hero-tablet.jpg" />
        <img
          src="{{ baseurl }}/assets/img/main/hero-desktop.jpg"
          alt="Pixoprint hero background"
          loading="eager"
          class="hero-fallback"
        />
      </picture>

      <video muted loop playsinline class="hero-video" aria-hidden="true">
        <source src="{{ baseurl }}/assets/video/hero.mp4" type="video/mp4" />
        <img
          src="{{ baseurl }}/assets/img/main/hero-desktop.jpg"
          alt="Hero background fallback"
          class="hero-fallback"
        />
      </video>
    </div>

    <div class="container hero-content" data-aos="zoom-in-up">
      <h1>{{ "hero.title" | t(locale) }}</h1>
      <p data-aos="zoom-in-up" data-aos-delay="100">{{ "hero.subtitle" | t(locale) }}</p>
      <a href="#contact" class="btn" data-aos="flip-up" data-aos-delay="200">
        {{ "hero.cta" | t(locale) }}
      </a>
      <a href="#service-grid" class="scroll-down" aria-label="Scroll to services">↓</a>
    </div>

    <div class="hero-ribbon" data-aos="zoom-in" data-aos-delay="300">
      <p>{{ "hero.ribbon" | t(locale) }}</p>
    </div>
  </section>

  <section id="counters" class="counters" data-aos="fade-up">
    <div class="counter animated">
      <div data-aos="flip-left">
        <span data-count="20">0</span>+
        <p>{{ "counter.years" | t(locale) }}</p>
      </div>
      <div data-aos="flip-left" data-aos-delay="100">
        <span data-count="1500">0</span>+
        <p>{{ "counter.clients" | t(locale) }}</p>
      </div>
      <div data-aos="flip-left" data-aos-delay="200">
        <span data-count="850">0</span>+
        <p>{{ "counter.signs" | t(locale) }}</p>
      </div>
    </div>
  </section>
</section>

<!-- SERVICE GRID -->
<section id="service-grid" class="grid service-grid">
  <div class="container">
    {% set services = [ { slug: 'wrapping', name: 'wrap' }, { slug: 'cnc-works', name: 'cnc-works',
    delay: 100 }, { slug: 'design', name: 'design', delay: 200 }, { slug: 'laser-cutting', name:
    'laser-cutting' }, { slug: 'led-neon', name: 'led-neon', delay: 100 }, { slug: 'lightbox', name:
    'lightbox', delay: 200 }, { slug: 'large-prints', name: 'prints' }, { slug: 'textile-printing',
    name: 'textile-print', delay: 100 }, { slug: 'vehicle-wrap', name: 'vehicle-wrap', delay: 200 }
    ] %} {% for service in services %}
    <a
      href="{{ baseurl }}/fi/{{ service.slug }}/"
      class="grid-item"
      data-aos="zoom-in-up"
      {%
      if
      service.delay
      %}data-aos-delay="{{ service.delay }}"
      {%
      endif
      %}
    >
      <picture>
        <source
          type="image/webp"
          srcset="{{ baseurl }}/assets/img/main/{{ service.name }}-240.webp 240w,
                  {{ baseurl }}/assets/img/main/{{ service.name }}-320.webp 320w,
                  {{ baseurl }}/assets/img/main/{{ service.name }}-480.webp 480w,
                  {{ baseurl }}/assets/img/main/{{ service.name }}-640.webp 640w"
          sizes="(max-width: 599px) 100vw,
                 (max-width: 899px) calc(50vw - 0.75rem),
                 calc((100vw - 3rem) / 3)"
        />
        <img
          src="{{ baseurl }}/assets/img/main/{{ service.name }}-640.jpg"
          srcset="{{ baseurl }}/assets/img/main/{{ service.name }}-240.jpg 240w,
                  {{ baseurl }}/assets/img/main/{{ service.name }}-320.jpg 320w,
                  {{ baseurl }}/assets/img/main/{{ service.name }}-480.jpg 480w,
                  {{ baseurl }}/assets/img/main/{{ service.name }}-640.jpg 640w"
          sizes="(max-width: 599px) 100vw,
                 (max-width: 899px) calc(50vw - 0.75rem),
                 calc((100vw - 3rem) / 3)"
          alt="{{ 'page.' + service.slug + '.title' | t(locale) }}"
          loading="lazy"
          width="640"
          height="auto"
        />
      </picture>
      {% set key = 'page.' + service.slug + '.title' %}
      <h3>{{ key | t(locale) }}</h3>
    </a>
    {% endfor %}
  </div>
</section>

<!-- SOLUTION -->
<section class="solution" data-aos="fade-up">
  <div class="container solution-flex">
    <div class="solution-left">
      <h2>{{ "contactBlock.solutionTitle" | t(locale) }}</h2>
      <p>{{ "contactBlock.solutionText" | t(locale) }}</p>
    </div>
    <div class="solution-right">
      <ul>
        <li data-aos="fade-up" data-aos-delay="100" style="--delay: 0.3s">
          <span class="progress-bar"></span>
          {{ "contactBlock.list.1" | t(locale) }}
        </li>
        <li data-aos="fade-up" data-aos-delay="200" style="--delay: 0.5s">
          <span class="progress-bar"></span>
          {{ "contactBlock.list.2" | t(locale) }}
        </li>
        <li data-aos="fade-up" data-aos-delay="300" style="--delay: 0.7s">
          <span class="progress-bar"></span>
          {{ "contactBlock.list.3" | t(locale) }}
        </li>
        <li data-aos="fade-up" data-aos-delay="400" style="--delay: 1s">
          <span class="progress-bar"></span>
          {{ "contactBlock.list.4" | t(locale) }}
        </li>
      </ul>
    </div>
  </div>
</section>

<!-- CONTACT FORM -->
<section id="contact" class="contact-form-section" data-aos="zoom-in-up">
  <div class="container">
    <h2>{{ "contactBlock.formTitle" | t(locale) }}</h2>
    <form>
      <input
        type="text"
        name="name"
        placeholder="{{ 'contactBlock.form.name' | t(locale) }}"
        required
      />
      <input
        type="email"
        name="email"
        placeholder="{{ 'contactBlock.form.email' | t(locale) }}"
        required
      />
      <textarea
        name="message"
        placeholder="{{ 'contactBlock.form.message' | t(locale) }}"
        required
      ></textarea>
      <button type="submit">{{ "contactBlock.form.button" | t(locale) }}</button>
    </form>
  </div>
</section>

<!-- JS: видео -->
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const video = document.querySelector('.hero-video')
    const fallback = document.querySelector('.hero-fallback')

    if (video && fallback) {
      video
        .play()
        .then(() => {
          fallback.style.display = 'none'
        })
        .catch(() => {
          video.addEventListener('canplay', function () {
            fallback.style.display = 'none'
            video.play().catch(() => {})
          })
        })
    }
  })
</script>
