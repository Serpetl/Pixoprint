---
layout: layouts/base.njk
permalink: '/fi/contact/'
locale: fi
title: 'contact.title'
description: 'contact.subtitle'
canonical: '/fi/contact/'
alternateLocalePath: '/en/contact/'
css: '/assets/css/contact.css'
---

<section class="contactpage__hero contactpage__section">
  <div class="contactpage__container">
    <h1 class="contactpage__title" data-aos="fade-up">{{ 'contact.title' | t(locale) }}</h1>
    <p class="contactpage__subtitle" data-aos="fade-up" data-aos-delay="100">
      {{ 'contact.subtitle' | t(locale) }}
    </p>
  </div>
</section>

<section class="contactpage__info contactpage__section">
  <div class="contactpage__container contactpage__info-grid">
    <div class="contactpage__info-card" data-aos="fade-up">
      <span class="contactpage__icon" aria-hidden="true">
        <svg
          width="32"
          height="32"
          stroke="#eb1768"
          stroke-width="1.5"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round"
          viewBox="0 0 24 24"
        >
          <path d="M14.05 2a10 10 0 0 1 7.95 7.95M14.05 6a6 6 0 0 1 3.95 3.95" />
          <path
            d="M22 16.92v3a1 1 0 0 1-1.1 1A19.86 19.86 0 0 1 3 5.1 1 1 0 0 1 4 4h3a1 1 0 0 1 1 .75l.7 2.7a1 1 0 0 1-.27 1L7 10a16 16 0 0 0 7 7l1.55-1.55a1 1 0 0 1 1-.27l2.7.7a1 1 0 0 1 .75 1z"
          />
        </svg>
      </span>
      <div class="contactpage__info-main">
        <a
          class="contactpage__info-text"
          href="tel:{{ 'contact.phone' | t(locale) | replace(' ', '') }}"
          >{{ 'contact.phone' | t(locale) }}</a
        >
      </div>
      <a class="contactpage__btn" href="tel:{{ 'contact.phone' | t(locale) | replace(' ', '') }}"
        >{{ 'contact.buttons.call' | t(locale) }}</a
      >
    </div>
    <div class="contactpage__info-card" data-aos="fade-up" data-aos-delay="100">
      <span class="contactpage__icon" aria-hidden="true">
        <svg
          width="32"
          height="32"
          stroke="#eb1768"
          stroke-width="1.5"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round"
          viewBox="0 0 24 24"
        >
          <rect x="3" y="5" width="18" height="14" rx="2" />
          <polyline points="3 7 12 13 21 7" />
        </svg>
      </span>
      <div class="contactpage__info-main">
        <a class="contactpage__info-text" href="mailto:{{ 'contact.email' | t(locale) }}"
          >{{ 'contact.email' | t(locale) }}</a
        >
      </div>
      <a class="contactpage__btn" href="mailto:{{ 'contact.email' | t(locale) }}"
        >{{ 'contact.buttons.email' | t(locale) }}</a
      >
    </div>
  </div>
</section>

<section class="contactpage__location contactpage__section" aria-labelledby="location-heading">
  <div class="contactpage__container contactpage__location-inner">
    <div class="contactpage__location-info" data-aos="fade-up">
      <h2 id="location-heading" class="contactpage__location-title">
        {{ 'contact.directions.title' | t(locale) }}
      </h2>
      <div class="contactpage__location-row">
        <span class="contactpage__location-icon">
          <svg
            width="18"
            height="18"
            stroke="#eb1768"
            stroke-width="1.5"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
            viewBox="0 0 24 24"
          >
            <path
              d="M12 21c-4.418 0-8-5.373-8-10A8 8 0 0 1 12 3a8 8 0 0 1 8 8c0 4.627-3.582 10-8 10z"
            />
            <circle cx="12" cy="11" r="3" />
          </svg>
        </span>
        <span>{{ 'contact.address' | t(locale) }}</span>
      </div>
      <div class="contactpage__location-row">
        <span class="contactpage__location-icon">
          <svg
            width="18"
            height="18"
            stroke="#eb1768"
            stroke-width="1.5"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
            viewBox="0 0 24 24"
          >
            <circle cx="12" cy="12" r="10" />
            <polyline points="12 6 12 12 16 14" />
          </svg>
        </span>
        <span>{{ 'contact.hours' | t(locale) }}</span>
      </div>
      <div class="contactpage__location-map" data-aos="fade-up" data-aos-delay="150">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1987.0088924956083!2d25.03976981616283!3d60.19915204818113!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x469209bb1b2332e5%3A0x3f89b86f354bfa76!2sSahaajankatu%2039h%2C%2000880%20Helsinki%2C%20Finland!5e0!3m2!1sen!2sfi!4v1683213135230!5m2!1sen!2sfi"
          width="100%"
          height="180"
          style="border: 0"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          title="{{ 'contact.map.title' | t(locale) }}"
        >
        </iframe>
      </div>
      <p class="contactpage__location-desc" data-aos="fade-up" data-aos-delay="200">
        {{ 'contact.directions.text' | t(locale) }}
      </p>
      <a
        class="contactpage__btn contactpage__btn--map"
        data-aos="fade-up"
        data-aos-delay="250"
        href="https://www.google.com/maps/dir/?api=1&destination=Sahaajankatu+39h,+00880+Helsinki"
        target="_blank"
        rel="noopener"
      >
        {{ 'contact.directions.button' | t(locale) }}
      </a>
    </div>
  </div>
</section>

<section class="contactpage__form contactpage__section">
  <div class="contactpage__container">
    <div class="contactpage__form-card" data-aos="fade-up">
      <h2 class="contactpage__form-title">{{ 'contact.form.title' | t(locale) }}</h2>
      <form class="contactpage__form-main" autocomplete="off">
        <label class="contactpage__form-label">
          <span>{{ 'contact.form.name' | t(locale) }}</span>
          <input
            type="text"
            name="name"
            class="contactpage__form-input"
            required
            autocomplete="off"
          />
        </label>
        <label class="contactpage__form-label">
          <span>{{ 'contact.form.email' | t(locale) }}</span>
          <input
            type="email"
            name="email"
            class="contactpage__form-input"
            required
            autocomplete="off"
          />
        </label>
        <label class="contactpage__form-label">
          <span>{{ 'contact.form.message' | t(locale) }}</span>
          <textarea
            name="message"
            class="contactpage__form-input contactpage__form-textarea"
            required
            rows="4"
          ></textarea>
        </label>
        <button type="submit" class="contactpage__btn contactpage__btn--send">
          {{ 'contact.form.send' | t(locale) }}
        </button>
      </form>
    </div>
  </div>
</section>
