---
layout: layouts/base.njk
permalink: '/en/about/'
locale: en
title: 'page.about.title'
description: 'page.about.description'
canonical: '/en/about/'
alternateLocalePath: '/fi/about/'
---

<!-- Intro -->
<section class="about-hero">
  <div class="container">
    <h1>{{ "about.intro.title" | t(locale) }}</h1>
    <p class="subtitle">{{ "about.intro.subtitle" | t(locale) }}</p>
    <p class="lead">{{ "about.intro.text" | t(locale) }}</p>
  </div>
</section>

<!-- Our Story -->
<section class="about-story" aria-labelledby="our-story-heading">
  <div class="container">
    <h2 id="our-story-heading" class="section-heading" data-aos="fade-up">
      {{ "about.story.title" | t(locale) }}
    </h2>
    <div class="two-col">
      <div class="image" data-aos="fade-right">
        <picture>
          <source
            type="image/webp"
            srcset="{{ baseurl }}/assets/img/about/story-320.webp 320w,
                    {{ baseurl }}/assets/img/about/story-480.webp 480w,
                    {{ baseurl }}/assets/img/about/story-640.webp 640w"
            sizes="(max-width: 767px) 100vw, (max-width: 1023px) 50vw, 600px"
          />
          <img
            src="{{ baseurl }}/assets/img/about/story-640.jpg"
            srcset="{{ baseurl }}/assets/img/about/story-320.jpg 320w,
                    {{ baseurl }}/assets/img/about/story-480.jpg 480w,
                    {{ baseurl }}/assets/img/about/story-640.jpg 640w"
            sizes="(max-width: 767px) 100vw, (max-width: 1023px) 50vw, 600px"
            alt="Pixoprint team at work"
            loading="lazy"
            decoding="async"
            width="640"
            height="auto"
          />
        </picture>
      </div>
      <div class="text" data-aos="fade-left">
        <p>{{ "about.story.text" | t(locale) }}</p>
      </div>
    </div>
  </div>
</section>

<!-- Our Values -->
<section class="about-values" data-aos="fade-up">
  <div class="container">
    <h2 class="section-heading">{{ "about.values.title" | t(locale) }}</h2>
    <ul class="icon-list">
      {% set vals = ["creativity", "collaboration", "efficiency", "quality"] %} {% for v in vals %}
      <li data-aos="zoom-in-up" data-aos-delay="{{ loop.index0 * 100 }}">
        <i
          class="fas {{ ['fa-lightbulb','fa-users','fa-bolt','fa-check-circle'][loop.index0] }}"
        ></i>
        {{ ("about.values." + v) | t(locale) }}
      </li>

      {% endfor %}
    </ul>
  </div>
</section>

<!-- Meet Our Team -->
<section class="about-team" aria-labelledby="meet-our-team-heading">
  <div class="container">
    <h2 id="meet-our-team-heading" class="section-heading" data-aos="fade-up">
      {{ "about.team.title" | t(locale) }}
    </h2>
    <div class="two-col reverse-on-desktop">
      <div class="image team-photo" data-aos="fade-left">
        <picture>
          <source
            type="image/webp"
            srcset="{{ baseurl }}/assets/img/about/team-320.webp 320w,
                    {{ baseurl }}/assets/img/about/team-480.webp 480w,
                    {{ baseurl }}/assets/img/about/team-640.webp 640w"
            sizes="(max-width: 767px) 100vw, 960px"
          />
          <img
            src="{{ baseurl }}/assets/img/about/team-640.jpg"
            srcset="{{ baseurl }}/assets/img/about/team-320.jpg 320w,
                    {{ baseurl }}/assets/img/about/team-480.jpg 480w,
                    {{ baseurl }}/assets/img/about/team-640.jpg 640w"
            sizes="(max-width: 767px) 100vw, 960px"
            alt="Pixoprint team"
            loading="lazy"
            decoding="async"
            width="640"
            height="auto"
          />
        </picture>
      </div>
      <div class="text" data-aos="fade-right">
        <p>{{ "about.team.text" | t(locale) }}</p>
      </div>
    </div>
  </div>
</section>

<!-- Call to Action -->
<section class="about-cta">
  <div class="container">
    <h2>{{ "about.cta.title" | t(locale) }}</h2>
    <p>{{ "about.cta.text" | t(locale) }}</p>
  </div>
</section>
